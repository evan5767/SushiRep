@model Food

<h2>Редактирование товара</h2>
<form asp-controller="AddFood" asp-action="Edit" method="post">
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <input type="hidden" asp-for="Id" />
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label">Наименование</label>
    <input type="text" asp-for="Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label">Описание</label>
    <input type="text" asp-for="Description" class="form-control" />
</div>
<div>
    <label asp-for="Category">Выберите категорию</label><br />
    <select asp-for="Category.Name">
        <option value="Пицца">Пицца</option>
        <option value="WOK">WOK</option>
        <option value="Роллы">Роллы</option>
        <option value="Салаты">Салаты</option>
        <option value="Напитки">Напитки</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Price" class="control-label">Цена</label>
    <input type="number" asp-for="Price" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Img" class="control-label">Путь к изобоажению</label>
    <input type="text" asp-for="Img" class="form-control" />
</div>
<div>
    <label asp-for="ToViewHome">Показать в рекомендациях?</label><br />
    <input type="checkbox" asp-for="ToViewHome" />
</div>
<div class="form-group">
    <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
</div>
</form>
